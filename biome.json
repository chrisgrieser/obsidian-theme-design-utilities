{
	"$schema": "https://raw.githubusercontent.com/biomejs/biome/main/packages/%40biomejs/biome/configuration_schema.json",
	"files": {
		"include": ["*.json", "src/**/*.ts"]
	},
	"json": {
		"parser": { "allowComments": true }
	},
	"formatter": {
		"lineWidth": 100,
		"indentStyle": "tab",
		"indentWidth": 3,
		"formatWithErrors": true
	},
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"rules": {
			"all": true,
			"nursery": { "useImportType": "off" },
			"suspicious": { "noConsoleLog": "off" },
			"complexity": { "noExcessiveCognitiveComplexity": "off" },
			"style": {
				"useTemplate": "off",
				"noParameterAssign": "off",
				"useSingleVarDeclarator": "off",
				"useNamingConvention": { "level": "warn", "options": { "strictCase": false } }
			}
		}
	}
}
